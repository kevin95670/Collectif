{% extends 'base.html.twig' %}

{% block title %}Categories index{% endblock %}

{% block body %}
    <h1>Categories index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a class="btn btn-primary mr-3 card-link" href="{{ path('categories_show', {'id': category.id}) }}">Voir</a>
                    <a class="btn btn-success mr-3 card-link" href="{{ path('categories_edit', {'id': category.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune catégorie existante</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="d-block text-center">
        <a class="btn btn-primary mr-3 card-link" href="{{ path('categories_new') }}">Créer une nouvelle catégorie</a>
    </div>
{% endblock %}
