{{ form_start(form) }}
	<div class="form-row">
		<div class="form-group col-md-6">
			{{ form_label(form.name)}}
	   		<div class="input-group">
                <div class="input-group-prepend">
                    <i class="input-group-text fas fa-user"></i>
                </div>
	   			{{ form_widget(form.name,{'attr': {'class': 'form-control','placeholder': "Catégorie"}})}}
	   		</div>
	   		{{ form_errors(form.name)}}
    	</div>
    </div>
    <button class="btn btn-primary d-block mx-auto">{{ button_label|default('Créer') }}</button>
{{ form_end(form) }}
