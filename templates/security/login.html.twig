{% extends 'base.html.twig' %}

{% block description %}Connecte toi et rejoins ou crée différents évènements !{% endblock %}

{% block title %}connexion{% endblock %}

{% block body_id 'connexion' %}

{% block body %}

<div class="container connexion-form-wrapper py-4">
    <h1 class="mb-4 text-center">Connexion</h1>
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en temps que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
        <div class="form-row">
            <div class="form-group col-md-6 mx-auto">
                <label for="inputEmail">Email</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <i class="input-group-text far fa-envelope"></i>
                    </div>
                    <input type="email" value="{{ last_username }}" placeholder="Exemple@exemple.com" name="email" id="inputEmail" class="form-control" required autofocus>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6 mx-auto">
                <label for="inputPassword">Mot de passe</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <i class="input-group-text fas fa-key"></i>
                    </div>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>
            </div>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}">

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-color mx-auto d-block" type="submit">Connexion</button>
    </form>
</div>
{% endblock %}
