{{ form_start(form) }}
	<div class="form-row">
		<div class="form-group col-md-6">
    		{{ form_row(form.name) }}
    	</div>
    </div>
	<div class="form-row date">
		<div class="form-group col-md-6 {% if not form.date.vars.valid %}has-error{% endif %}">
    		{{ form_row(form.date) }}
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-6">
    		{{ form_row(form.city) }}
    	</div>
		<div class="form-group col-md-6">
    		{{ form_row(form.nb_participant) }}
    	</div>
    </div>
	<div class="form-row">
		<div class="form-group col-md-6">
    		{{ form_row(form.imageFile) }}
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-12">
    		{{ form_row(form.description) }}
    	</div>
    </div>
	<div class="form-row categories">
		<div class="form-group col-md-6">
				<label class="required">Cat√©gories</label>
			    {% for checkbox in form.categories.children %}
			        <div class="categorie">
			            {{ form_widget(checkbox) }}
			            {{ form_label(checkbox) }}
			            {{ form_errors(checkbox) }}
			        </div>
			    {% endfor %}
    	</div>
    </div>

    <button type="submit" class="btn btn-primary d-block mx-auto">Valider</button>
{{ form_end(form) }}
