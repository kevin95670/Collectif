{% for event in events %}
<div class="col-sm-6 col-xs-12 {% if event.date < date() %}event-finished{% endif %}" id="event-{{event.id}}">
    <div class="card mb-3">
        {% if event.urlImage is not null %}
                <img class="card-img-top" src="{{vich_uploader_asset(event, 'imageFile')}}" alt="évènement-{{event.id}}" />
        {% endif %}
        <div class="card-body">
            <h2 class="card-title text-center">{{event.name}}</h2>
            <p>Proposé par : <a href="{{ path('user_show', {id: event.creator.id})}}">{{event.creator.firstname}} {{event.creator.lastname}}</a></p>
            <p class="card-text">Date : {{event.date|date("d/m/Y")}} à {{event.date|date("H:m:s")}}</p>
            <p class="card-text">Participant : {{event.getIdUsers()|length}} / {{event.nbParticipant}}</p>
            <p class="card-text">Ville : {{event.city}}</p>
            {% if event.getCategories()|length <= 1 %}
                <p class="card-text">Catégorie : 
            {% else %}
                <p class="card-text">Catégories : 
            {% endif %}
            {% for categorie in event.getCategories() %}
                <a href="{{ path('events_category', {category: categorie.name})}}">{{categorie.name}}</a>
            {% endfor %}
                </p>
            {#% if event.participant  != event.nbParticipant%}
                <a href="#">Rejoindre cet évènement</a>
            {% endif %}#}
            <div class="text-center">
                {% if event.date < date() %}
                    <p class="text-danger">Evenement terminé !</p>
                {% else %}
                    <a class="btn btn-primary mr-3 card-link" href="{{ path('show_event', {'id': event.id}) }}">Voir</a>
                    {% if app.user.id is defined %}
                        {% if event.creator.id == app.user.id %}
                            <a class="btn btn-success mr-3 card-link" href="{{ path('edit_event', {'id': event.id}) }}">Modifier</a>
                            {% include('events/_delete_form.html.twig') with {'event_id': event.id} %}
                        {% endif %}
                    {% endif %}
                {% endif %}
                {# <a href="{{ path('new_event') }}">Create new</a>#}
            </div>
        </div>
    </div>
</div>
{% endfor %}